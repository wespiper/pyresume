# Include important project files
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include requirements.txt
include pyproject.toml

# Include package data
recursive-include pyresume/data *.json

# Include documentation
recursive-include docs *.md *.rst *.txt
graft docs

# Include examples
recursive-include examples *.py *.md *.txt

# Exclude unwanted files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude *.so
global-exclude .git*
global-exclude .DS_Store
global-exclude *.swp
global-exclude *.swo

# Exclude test files and development files
exclude test_*.py
exclude *_test.py
prune tests
prune .github
prune venv
prune .venv
prune build
prune dist
prune *.egg-info